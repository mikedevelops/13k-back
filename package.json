{
  "name": "13k",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf dist/bundled && parcel build src/index.html -d dist/bundled --no-source-maps",
    "watch": "nodemon --watch src --exec \"npm run build\"",
    "start": "parcel src/index.html",
    "inline": "mkdir -p dist/inlined && html-inline dist/bundled/index.html -o dist/inlined/index.html",
    "zip": "node bin/zip-file.js && node bin/check-file-size.js",
    "size": "concurrently \"npm run watch\" \"nodemon --watch dist/bundled --exec 'npm run inline && npm run zip'\"",
    "deploy": "git push origin :gh-pages && git subtree push --prefix dist/inlined origin gh-pages"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "archiver": "^3.1.1",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^4.1.2",
    "html-inline": "^1.2.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-url-loader": "github:mikedevelops/parcel-plugin-url-loader#feature/dev-mode",
    "pretty-bytes": "^5.3.0",
    "rollup": "^1.19.4"
  }
}
